<% if current_user.already_like?(post) %>
  <%= link_to post_likes_path(post), method: :delete do %>
    <i class="fas fa-heart"></i>
  <% end %>
<% else %>
  <%= link_to post_likes_path(post), method: :post do %> <%# remote: true %>
    <i class="far fa-heart"></i>
  <% end %>
<% end %>
<%= @post.likes.count %>